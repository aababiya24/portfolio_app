<div id="<%= dom_id student %>">
  <p>
    <strong>First name:</strong>
    <%= student.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= student.last_name %>
  </p>

  <p>
    <strong>School email:</strong>
    <%= student.school_email %>
  </p>

  <p>
    <strong>Major:</strong>
    <%= student.major %>
  </p>

  <p>
    <strong>Expected graduation date:</strong>
    <%= student.expected_graduation_date %>

  </p>

<% if student.image.attached? %>
  <%= image_tag(student.image, width: "150", height: "150") %>
<% else %>
  <p>No image available.</p>
<% end %>


</div>


